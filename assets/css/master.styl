@import '_normalize'

@import '_settings'
@import '_base'
@import '_typography'

.snazzy
  position absolute
  top 50%
  transform translateY(-50%)

  padding-left 5em

  +below(1)
    padding-left 0
    text-align center
    margin auto
    width 100%

  .name
    +below(1)
      font-size: 10vw
      margin-bottom: 1rem

  .social-links
    list-style-type none
    padding-left 2em
    margin 0

    animation fadein 300ms ease-out

    +below(1)
      padding-left 0

@keyframes fadein
  from
    opacity 0
    transform translateY(2em)
  to
    opacity 1
    transform translateY(0)
